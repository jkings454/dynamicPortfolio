<div class ="container">
  <div class ="col-md-6 col-md-offset-3">
    <%= form_for([@project_group,  @project]) do |f| %>
    <div class ="form-group">
      <%= f.label "Name: " %>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label "Url: " %>
      <%= f.text_field :link, class: "form-control" %>
    </div>
    <div class ="form-group">
      <%= f.label "Description" %>
      <%= f.text_area :description, class: "form-control" %>
    </div>
    <div class ="form-group">
      <%= f.label "Type:" %>
      <%= f.select :link_type, ['link', 'download'], :prompt => '-select one-', class: "form-control" %>
    </div>
    <div class ="form-group">
      <%= f.label "Project Group ID:" %>
      <%= f.number_field :project_group_id, class: "form-control"%>
    </div>
    <%= f.submit "Update", class: "btn btn-primary" %>
    </div>
 
  <%end%>
  </div>
</div>
