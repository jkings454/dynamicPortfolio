<div class ="container">
  <ol class = "breadcrumb">
    <li><%= link_to "Classes", project_groups_path %></li>
    <li><%= link_to @project_group.title, project_group_path(@project_group)%></li>
    <li class = "active"><%= @project.name %></li>
  </ol>
  <div class ="col-md-8 col-md-offset-2">
  <div class ="page-header">
    <h3>Project</h3>
  </div>
    <div class ="well">
      <p><strong>name:</strong> <%= @project.name %></p>
      <p class="hidden-xs"><strong>url:</strong> <code> <%= @project.link %> </code></p>
      <p class ="visible-xs"><strong>link: </strong><a href ="<%=@project.link%>"><%=@project.name%></a> </p>
        <p><strong>created on:</strong> <%= @project.created_at.to_formatted_s(:long) %></p>
        <p><strong>last updated:</strong> <%= @project.updated_at.to_formatted_s(:long) %>
        <p><strong>description: </strong></p>
        <p><%= @project.description%></p>
    </div>
    <% if current_user && current_user.admin? %>
    <p><%= link_to 'edit', edit_project_path(@project) %>&nbsp;&nbsp;&nbsp;<%= link_to 'delete', project_path(@project), method: 'delete' %></p>
    <%end%>
  </div>
</div>
