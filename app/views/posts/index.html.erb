<div class="container">
  <% if flash[:success] %>
  <div class ="alert alert-success alert-dismissable fade in" role="alert"> 
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
    <%= flash[:success] %>
  </div>
  <%end%>
  <div class ="page-header">
    <h1>Blog Posts</h1>
  </div>
  <% unless @posts.blank? %>
  <% @posts.each do |p|  %>
  <h2><%= p.title %></h2>
  <div class="panel panel-default">
    <div class ="panel-body">
      <%= truncate(simple_format(p.content).gsub("<p>", ""), length: 300)%>
    </div>
    <div class ="panel-footer">
      <small>last updated: <%= p.updated_at.to_formatted_s(:long) %></small>
      <p class ="pull-right"><%= link_to "read more", post_path(p)%>
      <% if current_user && current_user.admin? %>
        &nbsp;&nbsp;<%= link_to "edit", edit_post_path(p) %> &nbsp; <%= link_to 'delete', post_path(p), method: 'delete' %> 
      <%end%></p>
    </div>
  </div>
  <%end%>
  <% else %>
  <p class ="text-danger">There aren't any posts yet. Come back later!</p>
  <%end%>
  <% if current_user && current_user.admin? %>
  <%= link_to "+new", new_post_path %>
  <%end%>
</div>
