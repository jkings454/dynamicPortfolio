<%= form_for @post do |f| %>
<div class ="container">
  <div class ="col-md-4">
  <%= f.text_field :title, class: "form-control input-lg"%>
  </div>
  <div class ="col-md-12">
  <%= f.text_area :content, class: "form-control", rows: "15" %>
  </div>
