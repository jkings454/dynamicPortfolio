html {
  position: relative;
  min-height: 100%;
}
body {
  /* Margin bottom by footer height */
  padding-bottom: 165px;
  font-family: 'Hind', sans-serif;
}
footer {
  position: absolute;
  bottom: 0;
  width: 100%;
  /* Set the fixed height of the footer here */
  height: 150px;
  background-color: #f5f5f5;
  margin-top: 0px;
}
.navsplit-before {
    padding-right: 1px !important;
}
.navsplit-after {
    padding-left: 1px !important;
}
